@model List<Movie>
@if(Model.Count == 0)
{
    <p>No movies found, sorry!</p>
}
else
{
    <div class=" ="row"> 
    @foreach(var movie in Model)
    {
        <div class="col-3">
                <div class="card">
                    @*shows our poster on top of the page calling on our model class for the DB*@
                <img src ="@movie.Poster" class="card-img-top"/>
                <div class="card body">
                    <h4 class="card-title">@movie.Title</h4>
                </div>
            </div>
        </div>
    }
    </div>
}